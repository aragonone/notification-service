# Main port for serving requests, e.g. 8000
PORT=
# Port for Prometheus metrics. Should not be exposed publicly
METRICS_PORT=
# The server hostname. For dev can be localhost
# In a docker container using host: '0.0.0.0' is needed.
HOST=
# API token for sending email with Postmark.
# For testing, Postmark allows passing the API Key “POSTMARK_API_TEST”
POSTMARK_SERVER_API_TOKEN=
# Postgres database details
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASS=
# The JWT secret. Can be generated with `node -e "console.log(require('crypto').randomBytes(256).toString('base64'));"`
JWT_KEY=
# Ethereum node, e.g. ;https://mainnet.eth.aragon.network`
ETH_NODE_MAINNET=
ETH_NODE_RINKEBY=
# boolean whether to enable knex debug (which logs all queries)
DEBUG_KNEX=
# boolean whether to enable debug logging for the scanner
DEBUG_SCANNER=
# Environment – should be production or test
NODE_ENV=